<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="ID:"/>
        <EditText
            android:id="@+id/txtScID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Name:"/>
        <EditText
            android:id="@+id/txtScName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Gender:"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rdscMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ຊາຍ"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rdscFale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ຍີງ"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Phone:"/>
        <EditText
            android:id="@+id/txtSctel"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btScOK"
            android:layout_weight="1"
            android:text="OK"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btScCancel"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>